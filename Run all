"""
ðŸš€ Combined Bot Runner
=======================
Startet Telegram Bot + Twitter Bot gleichzeitig.
"""

import threading
import logging

logging.basicConfig(
    level=logging.INFO,
    format='%(asctime)s - %(levelname)s - %(message)s',
    handlers=[
        logging.FileHandler('combined_bot.log'),
        logging.StreamHandler()
    ]
)

def run_telegram():
    from bot import run_bot
    run_bot()

def run_twitter():
    from twitter_bot import run_twitter_bot
    run_twitter_bot()

if __name__ == "__main__":
    print("ðŸš€ Starte beide Bots...")
    print("=" * 50)
    
    t1 = threading.Thread(target=run_telegram, name="TelegramBot", daemon=True)
    t2 = threading.Thread(target=run_twitter, name="TwitterBot", daemon=True)
    
    t1.start()
    t2.start()
    
    print("âœ… Telegram Bot lÃ¤uft!")
    print("âœ… Twitter Bot lÃ¤uft!")
    print("=" * 50)
    
    try:
        t1.join()
        t2.join()
    except KeyboardInterrupt:
        print("\nðŸ›‘ Beide Bots gestoppt!")
